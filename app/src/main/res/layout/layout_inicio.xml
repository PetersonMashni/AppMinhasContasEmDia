<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_inicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/layout_inicio_tvNome"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/layout_inicio_tvVencimento"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Dt. Vencto"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/layout_inicio_tvValor"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Valor"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/layout_inicio_tvPagamento"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="Dt. Pagto"
        android:textSize="20dp" />

</LinearLayout>