<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_despesa_fixa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/layout_despesa_fixa_tvNome"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="@string/layout_despesa_fixa_tvNome_hint"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/layout_despesa_fixa_tvStatus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="@string/layout_despesa_fixa_tvStatus_hint"
        android:textSize="20dp" />

</LinearLayout>